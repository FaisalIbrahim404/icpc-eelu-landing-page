{
  "extends": "astro/tsconfigs/base",
  "include": [".astro/types.d.ts", "**/*", "eslint.config.mjs", "astro.config.*", "src/env.d.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@lib/*": ["./src/lib/*"],
      "@data/*": ["./src/data/*"]
    },
    "types": ["astro/client"]
  }
}
