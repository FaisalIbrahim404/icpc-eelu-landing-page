---
import settings from '../data/settings.json';
import { createT } from '../lib/i18n.js';
const { lang = 'ar' } = Astro.props;
const t = createT(lang);
---

<section class="mx-auto max-w-screen-xl px-4 py-[var(--space-6)]">
  <div class="flex items-center gap-4">
    <img src={settings.brand.eelu_logo} alt="EELU" class="h-8 w-auto" />
    <p class="text-foreground-secondary">{t('support.eelu')}</p>
  </div>
</section>
