---
import settings from "../data/settings.json";
import { createT } from "../lib/i18n.js";
const { lang = "ar" } = Astro.props;
const t = createT(lang);
---

<section id="الرعاة" class="mx-auto max-w-screen-xl px-4 py-[var(--space-6)]">
  <div class="bg-surface border-border-subtle token-rounded-lg flex items-center justify-between gap-4 border p-6">
    <p class="text-foreground-primary">{t("sponsors.line")}</p>
    <a
      href={settings.sponsor_cta_url}
      class="token-rounded-md bg-button-primary-bg text-button-primary-foreground token-shadow-sm inline-flex items-center px-4 py-2"
    >
      {t("sponsors.button")}
    </a>
  </div>
</section>
