---
import "@/styles/global.css";
import settings from "../data/settings.json";
import { createT } from "../lib/i18n.js";
const { lang = "ar" } = Astro.props;
const t = createT(lang);
const steps = t("getStarted.steps", []);
---

<section id="ابدأ-الآن" class="mx-auto max-w-screen-xl px-4 py-[var(--space-6)]">
  <h2 class="leading-[var(--leading-snug)] font-semibold text-[var(--text-h2)]">
    {lang === "ar" ? "ابدأ الآن" : "Get Started"}
  </h2>
  <ol class="mt-6 grid gap-4 sm:grid-cols-3">
    {
      steps.map((s, i) => (
        <li class="bg-surface border-border-subtle token-rounded-lg token-shadow-sm border p-6">
          <div class="text-foreground-secondary text-small">{i + 1}</div>
          <div class="text-foreground-primary mt-2">{s}</div>
        </li>
      ))
    }
  </ol>
  <div class="mt-6">
    <a
      href={settings.channels.whatsapp}
      class="token-rounded-md bg-button-primary-bg text-button-primary-foreground token-shadow-sm inline-flex items-center px-5 py-3"
    >
      {lang === "ar" ? "انضم للقنوات" : "Join our channels"}
    </a>
  </div>
</section>
