---
import events from '../data/events.json';
import EventCard from './EventCard.astro';

const { lang = 'ar', dict } = Astro.props;
const top = events.slice(0, 5);
---

<section id="الفعاليات" class="flex max-w-screen-xl flex-col items-start justify-start gap-6 py-24">
  <h2 class="text-h2 leading-snug font-semibold">
    {lang === 'ar' ? 'الفعاليات والمواعيد القادمة' : 'Next Deadlines & Events'}
  </h2>
  <div class="relative grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {top.map((e) => <EventCard lang={lang} event={e} dict={dict} />)}
  </div>
  <div class="">
    <a href="#" class="text-link underline-offset-2 hover:underline"
      >{lang === 'ar' ? 'الجدول الزمني الكامل (قريباً)' : 'Full timeline (soon)'}</a
    >
  </div>
</section>
