---
import settings from '../data/settings.json';
import { createT } from '../lib/i18n.js';
const { lang = 'ar' } = Astro.props;
const t = createT(lang);
---

<section class="relative overflow-hidden">
  <!-- Fancy gradient background (no images) -->
  <div aria-hidden="true" class="absolute inset-0 -z-10">
    <div
      class="absolute start-1/2 -top-10 h-[120%] w-[120%] -translate-x-1/2 rounded-full opacity-20 blur-3xl"
      style="background: radial-gradient(closest-side, var(--color-accent-primary), transparent 70%)"
    >
    </div>
    <div
      class="absolute end-1/3 -bottom-20 h-[140%] w-[140%] translate-x-1/3 rounded-full opacity-10 blur-3xl"
      style="background: radial-gradient(closest-side, var(--color-highlight), transparent 70%)"
    >
    </div>
  </div>

  <div class="mx-auto max-w-screen-xl px-4 py-[var(--space-6)]">
    <div class="max-w-3xl">
      <h1 class="text-foreground-primary leading-[var(--leading-tight)] font-bold text-[var(--text-h1)]">
        {t("hero.title")}
      </h1>
      <p class="text-foreground-secondary mt-4 leading-[var(--leading-relaxed)] text-[var(--text-body-l)]">
        {t("hero.subtitle")}
      </p>
      <div class="mt-6 flex flex-wrap gap-3">
        <a
          href={settings.channels.whatsapp}
          class="token-rounded-md token-shadow-sm bg-button-primary-bg text-button-primary-foreground inline-flex items-center justify-center px-5 py-3"
        >
          {t("hero.primary")}
        </a>
        <a
          href="#الفعاليات"
          class="token-rounded-md border-border-default text-foreground-primary inline-flex items-center justify-center border bg-transparent px-5 py-3"
        >
          {t("hero.secondary")}
        </a>
      </div>
    </div>
  </div>
</section>
