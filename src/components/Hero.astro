---
import settings from '../data/settings.json';
import { createT } from '../lib/i18n.js';
const { lang = 'ar' } = Astro.props;
const t = createT(lang);
import Particles from '@components/ui/Particles';
---

<section class="container-center relative w-full max-w-screen-xl overflow-hidden">
  <!-- Fancy gradient background (no images) -->
  <!-- gradient -->
  <div
    aria-hidden="true"
    class="rounded-b-5xl from-accent-primary/90 pointer-events-none absolute inset-0 -z-10 overflow-hidden to-transparent to-50% before:absolute before:inset-0 before:bg-[radial-gradient(100%_100%_at_50%_20%,transparent_0%,transparent_50%,var(--color-accent-primary)_70%)] after:absolute after:inset-0 after:bg-[radial-gradient(90%_100%_at_50%_20%,transparent_0%,transparent_50%,var(--color-background-primary)_110%)] max-xl:rounded-b-none max-lg:bg-gradient-to-t before:max-lg:hidden xl:right-6 xl:left-6"
  >
  </div>

  <!-- Particles -->
  <div class="absolute inset-0 -z-10 xl:right-6 xl:left-6">
    <Particles
      particleColors={['#3b82f6']}
      particleCount={200}
      particleSpread={12}
      speed={0.2}
      particleBaseSize={150}
      moveParticlesOnHover={true}
      disableRotation={true}
      particleHoverFactor={10}
      alphaParticles
      client:load
    />
  </div>

  <!-- Content -->
  <div class="container-center z-10 mx-auto w-full px-4 py-40 text-center max-sm:py-24">
    <div class="container-center max-w-3xl flex-col gap-8">
      <h1
        class="font-heading from-foreground-primary/60 to-foreground-primary/90 via-foreground-primary/70 max-w-96 bg-gradient-to-b bg-clip-text py-6 text-5xl font-semibold text-transparent max-sm:max-w-72 sm:text-6xl lg:text-7xl"
      >
        {t('hero.title')}
      </h1>
      <p class="text-foreground-secondary mt-4 text-xl leading-relaxed max-sm:text-lg">
        {t('hero.subtitle')}
      </p>
      <div class="container-center mt-6 w-full flex-wrap gap-3 max-[400px]:flex-col">
        <a
          href={settings.channels.whatsapp}
          class="bg-button-primary-bg inline-flex items-center justify-center rounded-full px-5 py-3 font-semibold text-white max-[400px]:w-full"
        >
          {t('hero.primary')}
        </a>
        <a
          href="#الفعاليات"
          class="token-rounded-md text-foreground-primary inline-flex items-center justify-center bg-transparent px-5 py-3 font-semibold max-[400px]:w-full"
        >
          {t('hero.secondary')}
        </a>
      </div>
    </div>
  </div>
</section>
