---
import settings from '../data/settings.json';
import { createT } from '../lib/i18n.js';

const { lang = 'ar' } = Astro.props;
const t = createT(lang);
const nav = [
  { label: t('nav.pathway'), href: '#المسار' },
  { label: t('nav.events'), href: '#الفعاليات' },
  { label: t('nav.getStarted'), href: '#ابدأ-الآن' },
  { label: t('nav.sponsors'), href: '#الرعاة' },
];
---

<header class="bg-surface border-border-subtle sticky top-0 z-40 border-b">
  <div class="mx-auto flex max-w-screen-xl items-center justify-between px-4 py-3">
    <a href="/" class="inline-flex items-center gap-2">
      <img src={settings.brand.icpc_logo} alt="ICPC" class="h-8 w-auto" />
      <span class="sr-only">ICPC</span>
    </a>
    <nav class="flex items-center gap-4">
      {
        nav.map((item) => (
          <a
            href={item.href}
            class="text-foreground-secondary hover:text-foreground-primary text-sm transition-colors"
          >
            {item.label}
          </a>
        ))
      }
      <!-- Hidden toggles (scaffold only) -->
      <button
        class="hidden"
        aria-label={lang === "ar" ? "EN" : "العربية"}
        title="Language"
      >
      </button>
      <button class="hidden" aria-label="Theme" title="Theme"></button>
    </nav>
  </div>
</header>
