---
import { createT } from "../lib/i18n.js";
const { lang = "ar" } = Astro.props;
const t = createT(lang);
---

<section class="mx-auto max-w-screen-xl px-4 py-[var(--space-6)]">
  <h2 class="leading-[var(--leading-snug)] font-semibold text-[var(--text-h2)]">
    {lang === "ar" ? "لمحة عن ICPC" : "ICPC at a glance"}
  </h2>
  <p class="text-foreground-primary mt-4">{t("overview.text")}</p>
</section>
