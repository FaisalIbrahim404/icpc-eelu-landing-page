---
import { createT } from "../lib/i18n.js";
const { lang = "ar" } = Astro.props;
const t = createT(lang);
---

<section id="المسار" class="mx-auto max-w-screen-xl px-4 py-[var(--space-6)]">
  <h2 class="leading-[var(--leading-snug)] font-semibold text-[var(--text-h2)]">
    {lang === "ar" ? "المسار" : "Pathway"}
  </h2>
  <div class="bg-surface border-border-subtle token-rounded-lg mt-4 border p-6">
    <p class="text-foreground-primary">{t("pathway.label")}</p>
  </div>
</section>
